@model IEnumerable<Statuos.Web.Areas.Admin.Models.CustomerViewModel>

@{
    ViewBag.Title = "Index";
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#customers').dataTable({
                "bPaginate": false,
                "bLengthChange": false,
                "bFilter": false,
                "bSort": true,
                "bInfo": false,
                "bAutoWidth": false
            });

            $("#createCustomer").live("click", function (e) {
                e.preventDefault();

                $("<div></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .dialog({
                        title: "Create Customer",
                        close: function () { $(this).remove() },
                        modal: true
                    })
                    .load($(this).attr("href"))
            });

        });

    </script>


}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { id = "createCustomer" })
</p>
<table id ="customers">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th></th>
    </tr>
        </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
        </tbody>
</table>
