<!DOCTYPE html>
<html data-framework="emberjs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <script type="text/x-handlebars">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>{{#link-to 'managers.jsonrepresentation'}}ObjectJson{{/link-to}}</li>
                        <li>{{#link-to 'managers'}}Managers{{/link-to}}</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            <br />
            {{outlet}}
            @RenderBody()
        </div>
    </script>


    <script type="text/x-handlebars" data-template-name="managers">
        {{outlet}}
    </script>

    <script type="text/x-handlebars" data-template-name="managers/index">
        {{input value=search}}
        <input type="submit" {{action "query" }}>
        <br />
        <ul id="todo-list">
            {{#each}}
                <li>{{Name}}</li>
            {{/each}}
        </ul>
    </script>

    <script type="text/x-handlebars" data-template-name="managers/jsonrepresentation">
        <input type="submit" {{action "load" }} value="Load">
        <br />
        <hr />
        {{jsonString}}
    </script>






    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ember")
    @RenderSection("scripts", required: false)
</body>
</html>
