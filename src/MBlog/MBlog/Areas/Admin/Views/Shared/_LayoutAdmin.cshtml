@using MBlog.Infrastructure.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Mongo Blog</title>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries  -->
    <!--[if lt IE 9]>
          <script src="../../assets/js/html5shiv.js"></script>
          <script src="../../assets/js/respond.min.js"></script>
        <![endif]-->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MBlog Admin", "Index", "Admin", new {}, new {@class = "navbar-brand"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- Fix nav active http://chrisondotnet.com/2012/08/setting-active-link-twitter-bootstrap-navbar-aspnet-mvc/ -->
                    @Html.MenuLink("Home", "Index", "Admin")
                    @Html.MenuLink("Users", "Index", "User")
                    @Html.MenuLink("Posts", "Index", "Post")
                    @Html.MenuLink("Settings", "Index", "Setting")
                </ul>
                <p class="navbar-text pull-right">Logged in as @User.Identity.Name</p>
            </div>
            <!--/.navbar-collapse -->
        </div>
    </div>
    <div class="container">
        <div class="main-content">
            @RenderBody()
        </div>
        <hr/>
        <footer>
            <p>&copy; @DateTime.Now.Year -  Josh Hall</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/mblog")
    @RenderSection("scripts", required: false)
</body>
</html>
